@using (Html.BeginForm("FileUpload", "Quiz", FormMethod.Post,
                                                                new { enctype = "multipart/form-data" }))
{
    <center>
        <!--<div id="bild" onclick="getFile()">click to upload a file</div>-->
        <!-- this is your file input tag, so i hide it!-->
        <button id="bild" type="button" onclick="getFile()" class="btn btn-info">Lägg till bild</button>
        <!-- i used the onchange event to fire the form submission-->
        <div style='height: 0px;width: 0px; overflow:hidden;'>
            <input id="upfile" type="file" value="upload" onchange="sub(this)" />
        </div>
        <!-- here you can have file submit button or you can write a simple script to upload the file automatically-->
        @*<input type="submit" value='submit' >*@

    </center>
}

