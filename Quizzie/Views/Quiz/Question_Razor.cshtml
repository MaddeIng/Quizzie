@using Quizzie.Models.VM
@model QuizQuestionVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container text-center">
    <div>
        <img src="@Model.Question.ImageLink" />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>@Model.Question.Question</h3>

            @foreach (var item in @Model.Answers)
            {

                <input type="button" id="@item.ID" value="@item.Answer" class="btn btn-info"/>
            }

        </div>
    </div>
</div>

@section scripts {
    @*<script src="~/Scripts/jquery-1.9.1.min.js"></script>*@
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src='/signalr/js'></script>
    <script src="~/Scripts/Question.js"></script>
}
