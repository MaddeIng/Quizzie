@using Quizzie.Models.VM
@model QuizQuestionVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container text-center">
    <div class="row">
        <div class="col-lg-12">
            <h3>@Model.Question</h3>
            <p>
                <input type="button" value="A. The Smiths" id="date-time" class="btn btn-squared-default btn-primary" />
                <input type="button" value="B. Blondie" id="push-date-time" class="btn btn-squared-default btn-success" />
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>
                <input type="button" value="C. The Sparks" id="push-message" class="btn btn-squared-default btn-warning" />
                <input type="button" value="D. Roxy Music" id="push-message" class="btn btn-squared-default btn-danger" />
            </p>
        </div>
    </div>
</div>
<style>
    .btn-squared-default {
        width: 200px !important;
        height: 100px !important;
        font-size: 18px;
    }

        .btn-squared-default:hover {
            border: 3px solid white;
            font-weight: 300;
        }
</style>